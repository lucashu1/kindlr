<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.team19.kindlr">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".KindlrApp">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PostBookActivity"
            android:label="@string/title_activity_post_book"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainSwipingScreenActivity"
            android:label="@string/title_activity_main_swiping_screen" />
        <activity
            android:name=".ViewExchangeActivity"
            android:label="@string/title_activity_view_exchange" />
        <activity
            android:name=".ViewNotificationsActivity"
            android:label="@string/title_activity_view_notifications" />
        <activity
            android:name=".SignupActivity"
            android:label="@string/title_activity_signup"
            android:exported="true"/>
        <activity
            android:name=".ViewProfileActivity"
            android:label="@string/title_activity_view_profile"></activity>
    </application>

</manifest>